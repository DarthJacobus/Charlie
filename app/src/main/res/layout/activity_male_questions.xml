<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaleQuestionsActivity"
    android:background="#001a33">

    <RelativeLayout
        android:id="@+id/datePickerLayoutMale"
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#234790">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick your Date of Birth"
                android:gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:minDate="01/01/1870"/>



        </android.support.v7.widget.CardView>



    </RelativeLayout>



    <ViewFlipper
        android:id="@+id/questionFlipperMale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/datePickerLayoutMale">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:backgroundTint="#234790"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you transgender?"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:layout_marginRight="16dp"
                        android:onClick="nextView"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:onClick="nextView"
                        android:textSize="20sp"/>


                </RadioGroup>


            </RelativeLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:backgroundTint="#234790"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you take hormonal supplements?"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:layout_marginRight="16dp"
                        android:onClick="nextView"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:onClick="nextView"
                        android:textSize="20sp"/>


                </RadioGroup>


            </RelativeLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:backgroundTint="#234790"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you going through testorone therapy?"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:layout_marginRight="16dp"
                        android:onClick="finishAccountCreation"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:onClick="finishAccountCreation"
                        android:textSize="20sp"/>


                </RadioGroup>


            </RelativeLayout>



        </android.support.v7.widget.CardView>





    </ViewFlipper>


</RelativeLayout>