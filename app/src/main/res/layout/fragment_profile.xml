<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/night"
        android:layout_below="@id/cover">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="310dp"
            android:background="#001a33">


        </RelativeLayout>


        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:fontFamily="@font/sniglet"
            android:text="Settings"
            android:textColor="#999999"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="0dp"
            android:clickable="true"
            android:fontFamily="@font/sniglet"
            android:text="Edit Profile"
            android:textColor="#999999"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:background="#234790"
            app:cardBackgroundColor="#234790"
            app:cardCornerRadius="30dp">


            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Louise Westin-Elger"
                android:textStyle="bold"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:text="louwestin@hotmail.com"
                android:textStyle="bold"
                android:textColor="#999999"/>

            <Button
                android:id="@+id/viewPasswordButton"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="33dp"
                android:background="#001a33"
                android:fontFamily="@font/sniglet"
                android:text="View Password"
                android:textColor="#999999"
                android:textSize="10dp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#001a33"
        android:layout_alignBottom="@id/cover"
        android:layout_below="@id/cover"/>


    



</RelativeLayout>